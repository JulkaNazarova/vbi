extends ../templates/template.pug
block content

  +section-top({
    title: `Контекстная<br>реклама`,
    slogan: "Подготовим детальный аудит и медиаплан по достижению ваших целей",
    subtitle: `Достигаем целей, растим доход <span class="space-nowrap">от инвестиций,</span>  <span class="text-pink">заботимся о точной аналитике</span>`,
  })

  +page-banner("3d-context.webp")

  .page-body
    section.section
      +section-head({
        num: "01",
        title: "Отвечаем за ваши инвестиции на каждом этапе работы"
      })
      .section__block
        .container
          .block-cards-slider__wrap
            .row
              .col-lg-6
                .block-cards-slider__items
                  .block-cards-slider__item
                    .block-cards-slider__title Глубоко погружаемся в проект
                    .block-cards-slider__text Детально прорабатываем аудит и медиаплан и по шагам объясняем, как достигнем результатов.
                  .block-cards-slider__item
                    .block-cards-slider__title Работаем комплексно
                    .block-cards-slider__text До запуска проверяем посадочные страницы, даем рекомендации по доработке. Оптимизируем кампании, подключаем новые инструменты.
                  .block-cards-slider__item
                    .block-cards-slider__title Выстраиваем стратегию и тактику
                    .block-cards-slider__text Анализируем нишу, конкурентов и рынок. Формируем стратегию и прописываем тактический план, готовим креативную концепцию.
                  .block-cards-slider__item
                    .block-cards-slider__title Автоматизируем аналитику 
                    .block-cards-slider__text Настраиваем сквозную аналитику, исправляем ошибки в текущей. Метрики, срезы и регулярность согласовываем на старте.

              .col-lg-6
                .number-slider__wrap.number-slider_border
                  .swiper.number-slider.runet-slider
                    .swiper-wrapper
                      - for(var i=0; i<3; i++)
                        .swiper-slide
                          +runet-slider-item("contex-img-1.webp")
                    .number-slider__nav
                      .number-slider__nav-inner
                        .swiper-pagination
                        .d-none.d-md-block
                          .swiper-buttons__wrap
                            .swiper-button-prev
                            .swiper-button-next

                              
    section.section
      +section-head({
        num: "02",
        title: "Достигаем результатов",
        subtitle: "Увеличиваем количество целевых обращений, выдерживаем границы CPO и ДРР, растим узнаваемость бренда, не даём утекать трафику к конкурентам. В кейсах — показываем, как решаем такие задачи."
      })
      .section__block
        .container
          +cases-block

      .section__block
        .container
          .section-bottom
            a(href="javascript:void(0);").btn.btn-tr Все кейсы

    section.section
      +section-head({
        num: "03",
        title: "Как мы разрабатываем стратегии"
      })
      .section__block
        .container
          .steps-preparation__wrap
            +step-preparation(`0`, '01','Брифинг','Определяем цели, задачи, KPI.')
            +step-preparation(`200`, '02','Аудит','Анализируем текущие каналы и РК для более точного прогноза эффективности.')
            +step-preparation(`400`, '03','Анализ конкурентов','Анализируем конкурентов, находим способы отстройки и позиционирования.')
            +step-preparation(`600`, '04','Анализ рынка','Изучаем рынок и тренды: смотрим, какие каналы работают эффективнее.')
            +step-preparation(`0`, '05','Концепция','Разрабатываем креативную концепцию, формируем ключевые сообщения для сегментов аудитории')
            +step-preparation(`200`, '06','Медиаплан','Считаем затраты по всем каналам привлечения, прогнозируем эффективность')
            +step-preparation(`400`, '07','Презентация','Показываем стратегию заказчику, корректируем стратегию и тактику при необходимости')

    section.section
      +section-head({
        num: "04",
        title: "Почему нам доверяют"
      })
      .section__block
        .container
          .block-cards-slider__wrap
            .row
              .col-lg-6
                .block-cards-slider__items
                  .block-cards-slider__item
                    .block-cards-slider__title Выделяем команду
                    .block-cards-slider__text Закрепляем за вами проектную команду, которая работает не меньше 55 часов в месяц.
                  .block-cards-slider__item
                    .block-cards-slider__title Быстро реагируем
                    .block-cards-slider__text Корректируем стратегию под меняющиеся условия. Запускаем новые активности — старт от 3 часов до 5 дней в зависимости от сложности.
                  .block-cards-slider__item
                    .block-cards-slider__title Выстраиваем стратегию и тактику
                    .block-cards-slider__text Анализируем нишу, конкурентов и рынок. Формируем стратегию и прописываем тактический план, готовим креативную концепцию.
                  .block-cards-slider__item
                    .block-cards-slider__title Автоматизируем аналитику 
                    .block-cards-slider__text Настраиваем сквозную аналитику, исправляем ошибки в текущей. Метрики, срезы и регулярность согласовываем на старте.

              .col-lg-6
                .number-slider__wrap.number-slider_border
                  .swiper.number-slider.runet-slider
                    .swiper-wrapper
                      - for(var i=0; i<3; i++)
                        .swiper-slide
                          +runet-slider-item("contex-img-2.webp")
                    .number-slider__nav
                      .number-slider__nav-inner
                        .swiper-pagination
                        .d-none.d-md-block
                          .swiper-buttons__wrap
                            .swiper-button-prev
                            .swiper-button-next

      

    section.section
      +section-head({
        num: "05",
        title: "Уверенно чувствуем себя в разных нишах",
        subtitle: "За 10 лет изучили специфику многих бизнес-направлений. Это помогает нам говорить с бизнесом на одном языке — быстрее понимать задачи"
      })
      .section__block
        .container
          .row
            .mb-3.col-lg-6.mb-lg-0
              .main-about__wrap
                .main-about__item
                  .main-about__numbers 10 лет
                  .main-about__text опыта и экспертизы в интернет-маркетинге
                .main-about__item
                  .main-about__numbers 2 офиса
                  .main-about__text в Москве и Тамбове
                .main-about__item
                  .main-about__numbers 900+
                  .main-about__text успешно выполненных проектов
                .main-about__item
                  .main-about__numbers 80+
                  .main-about__text сертифицированных специалистов

            .col-lg-6
              +main-rating-wrap

    section.section
      +section-head({
        num: "06",
        title: "Больше всего опыта в направлениях"
      })
      .section__block
        .container
          +directions-accord

    section.section
      +section-head({
        num: "07",
        title: "Получаем признание рынка"
      })
      .section__block
        .container
          .ratings__wrap
            .tabs__overflow
              .tabs-head.ratings__tabs
                .tabs-head__item(data-tab='tab-1')._js-tabs-title.active Контекстная реклама
                .tabs-head__item(data-tab='tab-2')._js-tabs-title Таргетированная реклама
