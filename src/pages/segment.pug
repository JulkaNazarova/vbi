extends ../templates/template.pug
block content

  +section-top({
    title: `Экспертиза<br>в&nbsp;автотематике`,
    slogan: "Клиенты и их результаты — наша ценность",
    subtitle: `Нам доверяют крупнейшие<br> <span class="text-pink">дилерские сети и автопроизводители</span>`,
    btn: true
  })

  #segmentBanner.main-banner_segment(style="background-image:url('./img/segment-banner.jpg')")
  
  .page-body.page-segment
    section.section
      +section-head({
        num: "01",
        title: "Работаем над количеством лидов и снижением их стоимости"
      })
      .section__block
        //.container
        .motives-slider__wrap
          .swiper.motives-slider
            .swiper-wrapper
              -for(var i=0; i<2; i++)
                +motives-slide('motive-icon-1.svg', 'Комплексное продвижение в Интернете')
                +motives-slide('motive-icon-2.svg', 'Performance')
                +motives-slide('motive-icon-3.svg', 'Сквозная аналитика')
                +motives-slide('motive-icon-4.svg', 'Техническая поддержка')
    
  
    section.section
      +section-head({
        num: "02",
        title: "Разрабатываем и поддерживаем проекты в разных нишах"
      })
      .section__block
        .container
          +cases-block
  
      .section__block
        .container
          .section-bottom
            a(href="javascript:void(0);").btn.btn-tr Все кейсы
                      
    
    section.section
      +section-head({
        num: "03",
        title: "Заслужили доверие",
        subtitle: "За 10 лет изучили специфику многих бизнес-направлений. Это помогает нам говорить с бизнесом на одном языке — быстрее понимать задачи"
      })
      .section__block
        .container
          .row
            .mb-3.col-lg-6.mb-lg-0
              .main-about__wrap
                .main-about__item
                  .main-about__numbers 10 лет
                  .main-about__text опыта и экспертизы в интернет-маркетинге
                .main-about__item
                  .main-about__numbers 2 офиса
                  .main-about__text в Москве и Тамбове
                .main-about__item
                  .main-about__numbers 900+
                  .main-about__text успешно выполненных проектов
                .main-about__item
                  .main-about__numbers 80+
                  .main-about__text сертифицированных специалистов
  
            .col-lg-6
              +main-rating-wrap
              +digitals-item-slider
  
      .section__block
        +clients-slider

        
    section.section
      +section-head({
        num: "04",
        title: "Заголовок",
        subtitle: "Работаем на всех этапах маркетинговой воронки с учётом целей бизнеса и CJM потребителей. Используем все современные аналитические решения"
      })
      .section__block
        .container
          .ratings__wrap
            .tabs__overflow
              .tabs-head.ratings__tabs
                .tabs-head__item(data-tab='tab-1')._js-tabs-title.active Дилеры
                .tabs-head__item(data-tab='tab-2')._js-tabs-title Импортеры
            .tabs-info__block
              .tabs-info__item(data-tab='tab-1')._js-tabs-info.active
                .funnels__wrap
                  .funnels__item
                    .row
                      .col-lg-4
                        +funnels-title("Brandformance")
                      .col-lg-8
                        .funnels-steps
                          +funnels-step-item("Знание", "", "100", "#990033")
                          +funnels-step-item("Вовлечение", "", "80", "#990033")
                  .funnels__item
                    .row
                      .col-lg-4
                        +funnels-title("Performance")
                      .col-lg-8
                        .funnels-steps
                          +funnels-step-item("Заявка", "", "70", "#660022")
                          +funnels-step-item("Визит в салон", "", "50", "#660022")
                          +funnels-step-item("Продажа", "", "30", "#660022")
                          +funnels-step-item("Лояльность", "", "50", "#660022")
                          +funnels-step-item("Допродажа услуг", "", "70", "#660022")

